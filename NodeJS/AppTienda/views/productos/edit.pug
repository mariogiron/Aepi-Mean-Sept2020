extends ../layout.pug

block content
    h2 Formulario edición: #{producto.nombre}
    form(method="POST", action="/productos/update")
        .form-group
            label Nombre
            input.form-control(type="text", name="nombre", value=producto.nombre)
        .form-group
            label Precio
            input.form-control(type="text", name="precio", value=producto.precio)
        .form-group
            label Descripción
            textarea.form-control(name="descripcion", rows="5")= producto.descripcion
        .form-group
            label Departamento
            select.form-control(name="departamento", value=producto.departamento)
                option Ninguno
                option(value="electrodomesticos") Electrodomésticos
                option(value="informatica") Informática
                option(value="hogar") Hogar
                option(value="fotografia") Fotografía
        input(type="hidden", name="id", value=producto._id)
        input(type="submit", value="Enviar", class="btn btn-info btn-block")